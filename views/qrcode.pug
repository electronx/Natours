extends base

block content
  main.main
    .qr-form
      img#qr-code(src=`${userForQr.auth_url}`, alt='Natours logo')
      h2.heading-secondary.ma-bt-lg Scan the QR-code using Google Authenthicator
      form.form.form--verify
        .form__group.ma-bt-md
          label.form__label(for='verifyqr') Verify QR
          input#verifyqr.form__input(
            type='text',
            placeholder='123456',
            required,
            minlength='6'
          )
        .form__group
        button.btn.btn--green send
